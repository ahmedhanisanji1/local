<Page x:Class="Assimentf.ForgPass"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Assimentf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ForgPass">

    <Grid Background="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}">
        <TextBox Name="emailxtxt" HorizontalAlignment="Left" Margin="160,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="392" Height="54" BorderBrush="Black"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="78,103,0,0" VerticalAlignment="Top" Height="54" Width="77" FontSize="20"/>
        <TextBox BorderBrush="Black" Opacity="0" IsEnabled="False" Name="forgotpasstxt" HorizontalAlignment="Left" Margin="236,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Height="46" />
        <Label Name="passlabel" IsEnabled="False" Content="Your Password Is:" Foreground="Black" Opacity="0" HorizontalAlignment="Left" Margin="58,282,0,0" VerticalAlignment="Top" Height="44" Width="173" FontSize="20"/>
        <Button Content="Get Password" HorizontalAlignment="Left" Margin="562,354,0,0" VerticalAlignment="Top" Height="62" Width="202" FontSize="18" Click="GetPass_butt"/>

    </Grid>
</Page>
